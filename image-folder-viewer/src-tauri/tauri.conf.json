{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "image-folder-viewer",
  "version": "0.1.0",
  "identifier": "org.example.image-folder-viewer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "image-folder-viewer",
        "width": 800,
        "height": 600,
        "minWidth": 200,
        "minHeight": 200,
        "focus": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["**"]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
